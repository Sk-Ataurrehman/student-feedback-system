<!DOCTYPE html>
<html lang="en">

<head>
  
  <title>Manage Students | Feedback System</title>
  <%-include('../components/head')%>

</head>

<body>

  <!-- ======= Header ======= -->
  <%-include('../components/header')%>
  <!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <%-include('../components/navbar')%>
  
  <main id="main" class="main">
    <a href="/admin-feedback/students/add-student" class="btn btn-sm btn-outline-primary float-end"><i class="bi bi-person-plus-fill"></i>  Add Students</a>

    <div class="pagetitle">
      <h1>Students</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin-feedback/dashboard">Home</a></li>
          <li class="breadcrumb-item active">Students</li>
        </ol>

      </nav>

    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              
              <!-- Table with stripped rows -->
              <table width="100%" class="table table-hover datatable">
                <br>
                <thead>
                  <tr>
                    <th>Roll Number</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Parent Email</th>
                    <th>Department</th>
                    <th>Address</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                  <% var id = 0 %>
                  <% students.forEach(function(element){ %>
                    <tr>
                        <td><%=element.rollno%></td>
                        <td><%=element.name%></td>
                        <td><%=element.email%></td>
                        <td><%=element.parent_email%></td>
                        <td><%=element.department%></td>
                        <td><%=element.address%></td>
                        <% id = element._id %> 

                        <td class="text-end">
                            <a href='/admin-feedback/students/edit-student?id=<%=element._id%>&rollno=<%=element.rollno%>&name=<%=element.name%>&email=<%=element.email%>&parent_email=<%=element.parent_email%>&department=<%=element.department%>&address=<%=element.address%>' class="btn btn-outline-info btn-rounded"><i class="bi bi-pen"></i></a>
                            <a onclick="ask()"  data-toggle="modal" data-target="#exampleModalCenter" class="btn btn-outline-danger btn-rounded"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                   <% }); %>
                  
                </tbody>
              </table>

              <!-- Modal -->
              <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Confirm Delete</h5>
                    </div>
                    <div class="modal-body">
                      Are you sure want to delete the Student?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-warning" data-dismiss="modal">No</button>
                      <button type="button" class="btn btn-success" onclick="yes()">Yes</button>
                    </div>
                  </div>
                </div>
              </div>


            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <script>
    function yes(){
      window.location="/admin-feedback/students/delete-student?id=<%=id%>"
    }
    
  </script>
  <!-- Vendor JS Files -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>

    <%-include('../components/vendor')%>


</body>

</html>