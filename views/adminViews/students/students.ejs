<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Manage Students | MHSSP Feedback System</title>
    <link href="/vendor/fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/solid.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/brands.min.css" rel="stylesheet">
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/vendor/datatables/datatables.min.css" rel="stylesheet">
    <link href="/stylesheets/master.css" rel="stylesheet">
</head>

<body>
    <div class="wrapper">
        <!-- sidebar navigation component -->
        <%-include('../components/navbar')%>
        <!-- end of sidebar component -->
        <div id="body" class="active">
            <!-- navbar navigation component -->
            <%-include('../components/header')%>
            <!-- end of navbar navigation -->
            <div class="content">
                <div class="container">
                    <div class="page-title">
                        <h3>Students
                            <a href="/admin-feedback/students/add-student" class="btn btn-sm btn-outline-primary float-end"><i class="fas fa-user-plus"></i>  Add Students</a>
                        </h3>
                    </div>
                    <div class="box box-primary">
                        <div class="box-body">
                            <table width="100%" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Roll Number</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Parent Email</th>
                                        <th>Department</th>
                                        <th>Address</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% students.forEach(function(element){ %>
                                        <tr>
                                            <td><%=element.rollno%></td>
                                            <td><%=element.name%></td>
                                            <td><%=element.email%></td>
                                            <td><%=element.parent_email%></td>
                                            <td><%=element.department%></td>
                                            <td><%=element.address%></td>

                                            <td class="text-end">
                                                <a href='/admin-feedback/students/edit-student?id=<%=element._id%>&name=<%=element.name%>&email=<%=element.email%>&status=<%=element.status%>' class="btn btn-outline-info btn-rounded"><i class="fas fa-pen"></i></a>
                                                <a href="/admin-feedback/students/delete-student?id=<%=element._id%>" class="btn btn-outline-danger btn-rounded"><i class="fas fa-trash"></i></a>
                                            </td>
                                        </tr>
                                       <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/datatables/datatables.min.js"></script>
    <script src="/javascripts/initiate-datatables.js"></script>
    <script src="/javascripts/script.js"></script>
</body>

</html>